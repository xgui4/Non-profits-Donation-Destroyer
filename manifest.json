{
  "name": "Non-proits Donation Destroyer++",
  "version": "1.3",
  "version-name": "1.3-xgui4-fork",
  "description": "Removes the Wikipedia and others websites donations popups, replacing it with their actual financials.",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "my-local-addon@example.com",
      "data_collection_permissions": {
        "required" :  ["none"]
      }
    }
  },
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.torproject.org/*",
    "https://*.archive.org/*",
    "https://*.python.org/*",
    "https://*.linuxfoundation.org/*",
    "https://*.mozilla.org/*",
    "https://*.mozilla.com/*",
    "https://mozilla.substack.com/*",
    "https://*.firefox.com/*",
    "https://*.firefox.org/*",
    "https://*.gnome.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linuxfoundation.org/*"],
      "js": ["wdd_linuxfoundation.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.archive.org/*"],
      "js": ["wdd_internetarchive.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.python.org/*"],
      "js": ["wdd_python.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.torproject.org/*"],
      "js": ["wdd_tor.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["wdd_wikipedia.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://*.mozilla.com/*",
        "https://*.mozilla.org/*",
        "https://mozilla.substack.com/*",
        "https://*.firefox.com/*",
        "https://*.firefox.org/*"
      ],
      "js": ["wdd_mozilla.js"],
      "all_frames": true
    },    
    {
      "matches": [
        "https://*.gnome.org/*"
      ],
      "js": ["wdd_gnome.js"],
      "all_frames": true
    }
  ]
}