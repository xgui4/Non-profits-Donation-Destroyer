{
  "name": "Not-profits Donation Destroyer++",
  "version": "1.4",
  "description": "Removes the donation popups of \"non-profit\" foundation websites, replacing it with their actual financials",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "npdd@local.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required" :  ["none"]
      }
    }
  },
  "icons": {
	  "32": "assets/npdd_icon.png",
	  "64": "assets/npdd_icon_big.png"
  },
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.torproject.org/*",
    "https://*.archive.org/*",
    "https://*.python.org/*",
    "https://*.linuxfoundation.org/*",
    "https://*.mozilla.org/*",
    "https://*.mozilla.com/*",
    "https://mozilla.substack.com/*",
    "https://*.firefox.com/*",
    "https://*.firefox.org/*",
    "https://*.gnome.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linuxfoundation.org/*"],
      "css" : ["styles.css"],
      "js": ["npdd_common.js", "data/linuxfoundation.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.archive.org/*"],
      "css" : ["styles.css"],
      "js": ["npdd_common.js", "data/internetarchive.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.python.org/*"],
      "css" : ["styles.css"],
      "js": ["npdd_common.js", "data/python.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.torproject.org/*"],
      "css" : ["styles.css"],
      "js": ["npdd_common.js", "data/tor.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.wikipedia.org/*"],
      "css" : ["styles.css"],
      "js": ["npdd_common.js", "data/wikipedia.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://*.mozilla.com/*",
        "https://*.mozilla.org/*",
        "https://mozilla.substack.com/*",
        "https://*.firefox.com/*",
        "https://*.firefox.org/*"
      ],
      "js": ["npdd_common.js", "data/mozilla.js"],
      "css" : ["styles.css"],
      "all_frames": true
    },    
    {
      "matches": [
        "https://*.gnome.org/*"
      ],
      "js": ["npdd_common.js", "data/gnome.js"],
      "css" : ["styles.css"],
      "all_frames": true
    }
  ]
}